<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.2//EN"
    "http://java.sun.com/j2ee/dtds/web-app_2_2.dtd">
<web-app>
    <display-name>Chat App</display-name>
    <description>
      A global chat application.
    </description>

    <context-param>
      <param-name>webmaster</param-name>
      <param-value>shinhugh98@gmail.com</param-value>
      <description>
        Point of contact for questions and comments.
      </description>
    </context-param>

    <servlet>
      <servlet-name>test</servlet-name>
      <servlet-class>chat.TestServlet</servlet-class>
    </servlet>

    <servlet>
      <servlet-name>apiUser</servlet-name>
      <servlet-class>chat.APIUserServlet</servlet-class>
    </servlet>

    <servlet>
      <servlet-name>apiLogin</servlet-name>
      <servlet-class>chat.APILoginServlet</servlet-class>
    </servlet>

    <servlet>
      <servlet-name>pageRoot</servlet-name>
      <servlet-class>chat.PageRootServlet</servlet-class>
    </servlet>

    <servlet>
      <servlet-name>pageLogin</servlet-name>
      <servlet-class>chat.PageLoginServlet</servlet-class>
    </servlet>

    <servlet-mapping>
      <servlet-name>default</servlet-name>
      <url-pattern>/public/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
      <servlet-name>test</servlet-name>
      <url-pattern>/test</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
      <servlet-name>apiUser</servlet-name>
      <url-pattern>/api/user</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
      <servlet-name>apiLogin</servlet-name>
      <url-pattern>/api/login</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
      <servlet-name>pageRoot</servlet-name>
      <url-pattern>/</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
      <servlet-name>pageLogin</servlet-name>
      <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <session-config>
      <session-timeout>60</session-timeout>
    </session-config>
</web-app>