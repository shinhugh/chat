<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.2//EN"
    "http://java.sun.com/j2ee/dtds/web-app_2_2.dtd">
<web-app>
    <display-name>Chat App</display-name>
    <description>
      A global chat application.
    </description>

    <context-param>
      <param-name>webmaster</param-name>
      <param-value>shinhugh98@gmail.com</param-value>
      <description>
        Point of contact for questions and comments.
      </description>
    </context-param>

    <servlet>
      <servlet-name>test</servlet-name>
      <servlet-class>chat.TestServlet</servlet-class>
    </servlet>

    <servlet>
      <servlet-name>user</servlet-name>
      <servlet-class>chat.UserServlet</servlet-class>
    </servlet>

    <servlet>
      <servlet-name>login</servlet-name>
      <servlet-class>chat.LoginServlet</servlet-class>
    </servlet>

    <servlet-mapping>
      <servlet-name>test</servlet-name>
      <url-pattern>/test</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
      <servlet-name>user</servlet-name>
      <url-pattern>/user</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
      <servlet-name>login</servlet-name>
      <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <session-config>
      <session-timeout>60</session-timeout>
    </session-config>
</web-app>